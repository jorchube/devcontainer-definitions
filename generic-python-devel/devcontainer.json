{
	"name": "python-devel",

	"image": "quay.io/fedora/fedora:latest",

	"shutdownAction": "stopContainer",

	"postCreateCommand": "bash .devcontainer/on_create.sh",

	"remoteUser": "root",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.isort"
			]
		}
	}
}
